@using WebAppEF.Entities
@model WebAppEF.ViewModel.RisultatiRicercaViewModel

@{
    ViewData["Title"] = "Risultati Ricerca";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        :root {
            --admin-primary: #1a237e;
            --admin-secondary: #283593;
            --admin-accent: #536dfe;
            --admin-light: #e8eaf6;
            --admin-dark: #0d1440;
            --admin-text: #212121;
            --admin-text-light: #f5f5f5;
            --admin-border: #c5cae9;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f7fa;
            color: var(--admin-text);
            min-height: 100vh;
        }

        /* Admin Container */
        .admin-container {
            background-color: white;
            border-radius: 8px;
            border: 1px solid var(--admin-border);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            padding: 2rem;
            margin: 2rem auto;
        }

        .admin-title {
            font-weight: 700;
            color: var(--admin-primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

        .admin-title i {
            margin-right: 10px;
        }

        /* Buttons */
        .admin-btn {
            border-radius: 6px;
            font-weight: 500;
            padding: 0.6rem 1.2rem;
            transition: all 0.2s;
            letter-spacing: 0.3px;
        }

        .admin-btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }

        .admin-btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Tables */
        .admin-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-bottom: 1.5rem;
        }

        .admin-table thead th {
            background-color: var(--admin-primary);
            color: white;
            padding: 1rem;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .admin-table tbody tr {
            transition: all 0.2s;
        }

        .admin-table tbody tr:hover {
            background-color: var(--admin-light);
        }

        .admin-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--admin-border);
            vertical-align: top;
        }

        /* Table Container */
        .table-container {
            max-height: 500px;
            overflow-y: auto;
            border: 1px solid var(--admin-border);
            border-radius: 8px;
            margin-bottom: 2rem;
        }

        /* Badges */
        .badge-annullato {
            background-color: #dc3545;
            color: white;
            padding: 0.35em 0.65em;
            font-weight: 500;
            border-radius: 4px;
        }

        .badge-confermato {
            background-color: #28a745;
            color: white;
            padding: 0.35em 0.65em;
            font-weight: 500;
            border-radius: 4px;
        }

        .badge-spedito {
            background-color: #ffc107;
            color: black;
            padding: 0.35em 0.65em;
            font-weight: 500;
            border-radius: 4px;
        }

        .badge-default {
            background-color: #6c757d;
            color: white;
            padding: 0.35em 0.65em;
            font-weight: 500;
            border-radius: 4px;
        }

        /* Alert */
        .admin-alert {
            border-radius: 6px;
            border-left: 4px solid #17a2b8;
            background-color: rgba(23, 162, 184, 0.1);
            color: #0c5460;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
        }

        .admin-alert i {
            margin-right: 10px;
            font-size: 1.2rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .admin-container {
                padding: 1.5rem;
                margin: 1.5rem;
            }

            .admin-table thead th,
            .admin-table td {
                padding: 0.75rem;
            }
        }

        .order-details {
            display: none; /* I dettagli sono nascosti per default */
            margin-top: 1rem;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 6px;
            background-color: #f9f9f9;
        }

        /* Dettagli Ordini visibili quando la classe "show" è attiva */
        .order-details.show {
            display: block; /* I dettagli sono visibili quando il toggle è attivo */
        }

        /* Badge per lo stato degli ordini */
        .badge-annullato {
            background-color: #dc3545;
            color: white;
        }

        .badge-confermato {
            background-color: #28a745;
            color: white;
        }

        .badge-spedito {
            background-color: #ffc107;
            color: black;
        }

        .badge-default {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="admin-breadcrumb">
        <div class="container-fluid">
            <a href="@Url.Action("Filtri", "Filtri")" class="admin-btn admin-btn-secondary mb-4">
                <i class="fas fa-arrow-left me-2"></i> Nuova Ricerca
            </a>
        </div>
    </div>

    <div class="container-fluid">
        <div class="admin-container">
            <h1 class="admin-title">
                <i class="fas fa-search me-2"></i>Risultati della Ricerca
            </h1>


            @if (Model.Clienti != null && Model.Clienti.Count > 0)
            {
                <h3 class="mt-4 mb-3" style="color: var(--admin-primary);">
                    <i class="fas fa-users me-2"></i>Clienti Trovati
                </h3>
                <div class="table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Cognome</th>
                                <th>Email</th>
                                <th>Ordini</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cliente in Model.Clienti)
                            {
                                <tr>
                                    <td>@cliente.Nome</td>
                                    <td>@cliente.Cognome</td>
                                    <td>@cliente.Email</td>
                                    <td>
                                        <button class="btn btn-link" onclick="toggleOrderDetails(@cliente.IdCliente)">
                                            Vedi Ordini
                                        </button>
                                        <div id="order-details-@cliente.IdCliente" class="order-details">
                                            <h4>Dettagli Ordini</h4>
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>ID Ordine</th>
                                                        <th>Data Ordine</th>
                                                        <th>Totale</th>
                                                        <th>Stato</th>
                                                        <th>Cliente Attivo</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var ordine in cliente.Ordini)
                                                    {
                                                        <tr>
                                                            <td>@ordine.IdOrdine</td>
                                                            <td>@ordine.DataOrdine.ToShortDateString()</td>
                                                            <td>@ordine.TotaleOrdine.ToString("C")</td>
                                                            <td>
                                                                @if (ordine.Stato == StatoOrdine.Annullato)
                                                                {
                                                                    <span class="badge badge-annullato">@ordine.Stato</span>
                                                                }
                                                                else if (ordine.Stato == StatoOrdine.Confermato)
                                                                {
                                                                    <span class="badge badge-confermato">@ordine.Stato</span>
                                                                }
                                                                else if (ordine.Stato == StatoOrdine.Spedito)
                                                                {
                                                                    <span class="badge badge-spedito">@ordine.Stato</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge badge-default">@ordine.Stato</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (cliente.Attivo)
                                                                {
                                                                    <span class="badge bg-success">Attivo</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-danger">Non Attivo</span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @if ((Model.Clienti == null || Model.Clienti.Count == 0))
            {
                <div class="admin-alert">
                    <i class="fas fa-info-circle"></i>
                    <div>Nessun risultato trovato per la ricerca.</div>
                </div>
            }
        </div>
    </div>
    <script>
        function toggleOrderDetails(clienteId) {
            const details = document.getElementById('order-details-' + clienteId);
            details.classList.toggle('show');
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>