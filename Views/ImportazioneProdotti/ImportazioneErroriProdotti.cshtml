@{
    ViewData["Title"] = "Log Errori Importazione Prodotti";
    var importErrors = ViewBag.ImportErrors as List<string>;
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0"><i class="bi bi-exclamation-octagon-fill me-2"></i> Log Errori Importazione Prodotti</h3>
    </div>
    <div class="card-body">
        <p class="card-text">Di seguito sono elencati i dettagli degli errori riscontrati durante l'importazione dei prodotti.</p>

        @if (importErrors != null && importErrors.Any())
        {
            <div class="alert alert-warning mt-3" role="alert">
                <h4 class="alert-heading"><i class="bi bi-info-circle-fill me-2"></i> Elenco Errori</h4>
                <p>Sono stati trovati errori in **@importErrors.Count()** record. Correggi i dati nel file Excel e riprova.</p>
            </div>

            <div class="list-group">
                @foreach (var error in importErrors)
                {
                    <div class="list-group-item list-group-item-danger">
                        <i class="bi bi-bug me-2"></i> @error
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-success mt-3" role="alert">
                <h4 class="alert-heading"><i class="bi bi-check-circle-fill me-2"></i> Nessun Errore Rilevato!</h4>
                <p class="mb-0">L'ultima importazione di prodotti Ã¨ stata completata senza errori.</p>
            </div>
        }

        <div class="mt-4 text-center">
            <a asp-action="Index" asp-controller="ImportazioneProdotti" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left-circle me-2"></i> Torna all'Importazione Prodotti
            </a>
        </div>
    </div>
</div>

<script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</script>