@{
    ViewData["Title"] = "Importa Prodotti da Excel";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0"><i class="bi bi-box-seam me-2"></i> Importa Prodotti da Excel</h3>
    </div>
    <div class="card-body">
        <p class="card-text">Carica un file Excel (.xlsx) contenente i dati dei prodotti per l'importazione nel sistema.</p>

        @if (TempData["Errore"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Errore"]
            </div>
        }
        @if (TempData["Successo"] != null)
        {
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Successo"]
            </div>
        }

        <form asp-action="Mapping" asp-controller="ImportazioneProdotti" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="file" class="form-label">Seleziona file Excel:</label>
                <input type="file" class="form-control" id="file" name="file" accept=".xlsx" required>
                <div class="form-text">Solo file .xlsx sono accettati.</div>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-upload me-2"></i> Carica e Prosegui al Mapping
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}