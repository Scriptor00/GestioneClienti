@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Aggiungi Font Awesome per le icone -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        /* Aggiunta di bordi arrotondati e ombre */
        .card {
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Effetto hover: solleva il box e aggiungi ombra più profonda */
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        /* Colori mantenuti con i gradienti */
        .bg-info {
            background: linear-gradient(135deg, #6a82fb, #fc5c7d);
        }

        .bg-success {
            background: linear-gradient(135deg, #2c9f45, #72c94d);
        }

        .bg-warning {
            background: linear-gradient(135deg, #ffb347, #ffcc33);
        }

        /* Impostazioni di stile per le intestazioni delle card */
        .card-header {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .card-body {
            font-size: 1rem;
        }

        /* Effetto hover per il link */
        .card a {
            transition: background-color 0.3s ease;
        }

        .card a:hover {
            background-color: rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

<div class="d-flex" id="wrapper">
    <div id="page-content-wrapper" class="flex-grow-1">
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand text-white ms-3" href= "@Url.Action("Index", "Home")" class="text-white me-3" >OrdiNinja</a>
                <div class="ms-auto">
                    <a href="@Url.Action("Privacy", "Home")" class="text-white me-3">Privacy</a>
                </div>
            </div>
        </nav>

        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col text-center">
                    <h1 class="display-3 text-primary">Benvenuto nella Dashboard</h1>
                    <p class="lead">Gestisci i tuoi clienti, ordini e accedi facilmente a tutte le funzionalità del sistema.</p>
                </div>
            </div>

            <div class="row mt-5">
                <!-- Gestione Clienti -->
                <div class="col-12 col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-header">
                            <i class="fas fa-users me-2"></i>Gestione Clienti
                        </div>
                        <div class="card-body">
                            <p class="card-text">Visualizza, aggiungi, modifica o elimina clienti.</p>
                            <a href="@Url.Action("Index", "Customer")" class="btn btn-light">Vai alla gestione clienti</a>
                        </div>
                    </div>
                </div>

                <!-- Gestione Ordini -->
                <div class="col-12 col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-header">
                            <i class="fas fa-boxes me-2"></i>Gestione Ordini
                        </div>
                        <div class="card-body">
                            <p class="card-text">Visualizza e gestisci gli ordini dei tuoi clienti.</p>
                            <a href="@Url.Action("Index","Ordini")" class="btn btn-light">Vai alla Gestione Ordini</a>
                        </div>
                    </div>
                </div>

                <!-- Filtri di Ricerca -->
                <div class="col-12 col-md-4">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-header">
                            <i class="fas fa-search me-2"></i>Filtri di Ricerca
                        </div>
                        <div class="card-body">
                            <p class="card-text">Filtra i dati per trovare clienti o ordini specifici.</p>
                            <a href="@Url.Action("Filtri","Filtri")" class="btn btn-light">Vai ai Filtri</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container text-center">
        <p class="mb-0">Creato con passione da <strong>Carlo Dicuonzo</strong></p>
        <p class="mb-0">&copy; 2025 OrdiNinja. Tutti i diritti riservati.</p>
    </div>
</footer>

</body>
</html>
