<!-- Script per gestire la visibilit√† del form con animazione -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const showFormButton = document.getElementById('showFormButton');
        const contactForm = document.getElementById('contactForm');

        showFormButton.addEventListener('click', function() {
            // Animazione del pulsante
            this.innerHTML = '<span style="position: relative; z-index: 2;">APERTURA...</span>';
            setTimeout(() => {
                // Mostra il form con animazione
                contactForm.style.display = 'block';
                contactForm.style.opacity = '0';
                contactForm.style.transform = 'translateY(20px)';
                
                let opacity = 0;
                let position = 20;
                const fadeIn = setInterval(() => {
                    opacity += 0.05;
                    position -= 1;
                    contactForm.style.opacity = opacity;
                    contactForm.style.transform = `translateY(${position}px)`;
                    
                    if (opacity >= 1) {
                        clearInterval(fadeIn);
                        contactForm.style.transform = 'translateY(0)';
                    }
                }, 16);
                
                // Scroll alla posizione del form
                window.scrollTo({
                    top: contactForm.offsetTop - 50,
                    behavior: 'smooth'
                });
                
                // Ripristina il testo del pulsante
                this.innerHTML = '<span style="position: relative; z-index: 2;">CONTATTACI</span>';
            }, 500);
        });
    });
</script>

