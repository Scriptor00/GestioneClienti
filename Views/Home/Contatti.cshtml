        <div style="display: flex; gap: 1rem;">
            <a href="@Url.Action("Dashboard", "Home")" style="color: white; padding: 0.5rem 1rem; text-decoration: none; transition: background-color 0.3s;" onmouseover="this.style.backgroundColor='#495057'" onmouseout="this.style.backgroundColor='transparent'">Dashboard</a>
            <a href="@Url.Action("Contatti", "Home")" style="color: white; padding: 0.5rem 1rem; text-decoration: none; transition: background-color 0.3s;" onmouseover="this.style.backgroundColor='#495057'" onmouseout="this.style.backgroundColor='transparent'">Contatti</a>
        </div>
