@model GestioneClienti.ViewModel.ProdottoViewModel

@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #1e2b37;
            --secondary-color: #2c3e50;
            --accent-color: #3498db;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --text-color: #333;
            --light-text: #ecf0f1;
        }

        body {
            background-color: var(--light-color);
            font-family: 'Inter', sans-serif;
            color: var(--text-color);
            line-height: 1.6;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .page-title {
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            color: var(--light-text);
            padding: 1.5rem;
            border-radius: 12px;
            background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: white;
            padding: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border: 2px solid var(--primary-color);
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.2s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }

        .btn {
            border-radius: 8px;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            transition: all 0.2s ease;
        }

        .btn-primary {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-outline-secondary {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

        .btn-outline-secondary:hover {
            background-color: var(--primary-color);
            color: var(--light-text);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .alert {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .alert-success {
            background-color: #d1e7dd;
            border-color: #badbcc;
            color: #0f5132;
        }

        .rounded-pill {
            border-radius: 50px !important;
        }

        .shadow-lg {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>

    <h2 class="page-title">
        <i class="fas fa-box-open me-2"></i> @ViewData["Title"]
    </h2>

    <!-- Messaggi di notifica -->
    <div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <!-- Card principale -->
    <div class="card shadow-lg p-4 mt-4 border-0 rounded-3">
        <form asp-action="AggiungiProdotto" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NomeProdotto" class="form-label fw-bold">Nome Prodotto *</label>
                        <input asp-for="NomeProdotto" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="NomeProdotto" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Categoria" class="form-label fw-bold">Categoria *</label>
                        <input asp-for="Categoria" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Prezzo" class="form-label fw-bold">Prezzo (â‚¬) *</label>
                        <input asp-for="Prezzo" type="number" step="0.01" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="Prezzo" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Giacenza" class="form-label fw-bold">Giacenza *</label>
                        <input asp-for="Giacenza" type="number" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="Giacenza" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ImmagineUrl" class="form-label fw-bold">URL Immagine</label>
                        <input asp-for="ImmagineUrl" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="ImmagineUrl" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="TrailerUrl" class="form-label fw-bold">URL Trailer</label>
                        <input asp-for="TrailerUrl" class="form-control border-primary shadow-sm" />
                        <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-12 mt-4 pt-3 border-top text-center">
                    <button type="submit" class="btn btn-primary shadow-lg px-4 py-2 rounded-pill">
                        <i class="fas fa-save me-1"></i> Salva Prodotto
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-lg px-4 py-2 rounded-pill">
                        <i class="fas fa-arrow-left me-1"></i> Torna alla Lista
                    </a>
                </div>
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        
        <script>
            // Auto-dismiss alert after 5 seconds
            setTimeout(function () {
                var message = document.querySelector(".alert");
                if (message) {
                    message.classList.add('fade');
                    setTimeout(function() {
                        message.remove();
                    }, 150);
                }
            }, 5000);
        </script>
    }
</body>
</html>