    <style>
    :root {
    --product-image-height: 180px;
    --product-card-width: 280px;
}

body {
    font-family: 'Roboto', sans-serif;
    background-color: #1a1a1a;
    color: #fff;
    margin: 0;
    padding: 0;
}


.navbar {
    background: linear-gradient(145deg, #0a0a1a 0%, #1a1a2e 100%);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6);
    border-bottom: 1px solid #0d6efd;
    padding: 0.8rem 1rem;
    position: relative;
    z-index: 1000;
}

.navbar::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(13, 110, 253, 0.7), transparent);
}

.navbar-brand {
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    font-size: 1.8rem;
    color: #fff !important;
    text-shadow: 0 0 10px rgba(13, 110, 253, 0.7);
    letter-spacing: 1px;
    transition: all 0.3s;
    display: flex;
    align-items: center;
}

.navbar-brand:hover {
    text-shadow: 0 0 15px rgba(13, 110, 253, 0.9);
    transform: scale(1.02);
}

.navbar-brand i {
    margin-right: 10px;
    color: #0d6efd;
    font-size: 1.5rem;
    transition: all 0.3s;
}

.navbar-brand:hover i {
    color: #ff4b2b;
    transform: rotate(15deg);
}

.nav-link {
    color: #fff !important;
    font-weight: 500;
    padding: 0.6rem 1.2rem !important;
    margin: 0 0.3rem;
    border-radius: 6px;
    transition: all 0.3s;
    position: relative;
    display: flex;
    align-items: center;
}

.nav-link i {
    margin-right: 8px;
    font-size: 1.1rem;
    transition: all 0.3s;
}

.nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: #ff4b2b;
    transition: all 0.3s;
}

.nav-link:hover::before {
    width: 80%;
}

.nav-link:hover {
    background: rgba(13, 110, 253, 0.2);
}

.nav-link:hover i {
    color: #ff4b2b;
    transform: scale(1.2);
}

.navbar-toggler {
    border: 1px solid #0d6efd;
    padding: 0.5rem;
}

.navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    transition: all 0.3s;
}

.navbar-toggler:hover .navbar-toggler-icon {
    transform: scale(1.1);
}

/* Dropdown Gaming Style */
.gaming-dropdown {
    background: linear-gradient(145deg, #1a1a2e 0%, #0a0a1a 100%) !important;
    border: 1px solid #0d6efd !important;
    border-radius: 8px !important;
    box-shadow: 0 4px 20px rgba(13, 110, 253, 0.4) !important;
    padding: 0.5rem 0 !important;
    margin-top: 8px !important;
}

.gaming-dropdown .dropdown-item {
    color: #e0e0e0 !important;
    padding: 0.75rem 1.5rem !important;
    font-weight: 500;
    transition: all 0.3s !important;
    border-left: 3px solid transparent;
    display: flex;
    align-items: center;
}

.gaming-dropdown .dropdown-item i {
    color: #0d6efd !important;
    margin-right: 10px;
    width: 20px;
    text-align: center;
    transition: all 0.3s;
}

.gaming-dropdown .dropdown-item:hover {
    background: linear-gradient(90deg, rgba(13, 110, 253, 0.2), transparent) !important;
    color: #fff !important;
    border-left: 3px solid #0d6efd;
    transform: translateX(5px);
}

.gaming-dropdown .dropdown-item:hover i {
    color: #ff4b2b !important;
}

.gaming-dropdown .dropdown-divider {
    border-color: rgba(13, 110, 253, 0.3) !important;
    margin: 0.5rem 0 !important;
}

.logout-btn {
    color: #ff4b2b !important;
}

.logout-btn:hover {
    background: linear-gradient(90deg, rgba(255, 75, 43, 0.2), transparent) !important;
    border-left: 3px solid #ff4b2b !important;
}

.dropdown-toggle::after {
    border-top-color: #fff;
    transition: transform 0.3s;
}

.dropdown-toggle:hover::after {
    transform: rotate(180deg);
}

/* FINE NAVBAR AGGIORNATA - TUTTO IL RESTO RIMANE COME PRIMA */

.hero {
    text-align: center;
    background: linear-gradient(to right, #ff416c, #ff4b2b);
    padding: 60px 20px;
    margin-bottom: 40px;
    position: relative;
    overflow: hidden;
}

.hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('https://media.gqitalia.it/photos/64800e0d5dd81c9fc9cbdff7/16:9/w_1280,c_limit/100-best-games-hp-b.jpg') center/cover;
    opacity: 0.3;
    z-index: 0;
}

.hero-content {
    position: relative;
    z-index: 1;
}

.hero h1 {
    font-size: 3rem;
    font-family: 'Orbitron', sans-serif;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    margin-bottom: 20px;
}

.hero p {
    font-size: 1.2rem;
    margin-bottom: 30px;
}

.section-title {
    font-size: 2.5rem;
    text-align: center;
    border-bottom: 2px solid #0d6efd;
    padding-bottom: 10px;
    margin: 60px 0 30px;
    font-family: 'Orbitron', sans-serif;
    position: relative;
}

.section-title::after {
    content: "";
    display: block;
    width: 100px;
    height: 3px;
    background: #ff4b2b;
    margin: 10px auto 0;
}

.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(var(--product-card-width), 1fr));
    gap: 30px;
    margin: 40px 0;
    justify-items: center;
}

.product-card {
    background: #2d2d2d;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    position: relative;
    width: var(--product-card-width);
}

.product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 25px rgba(255, 75, 43, 0.4);
}

.product-image-container {
    position: relative;
    height: var(--product-image-height);
    overflow: hidden;
    background-color: #1a1a1a;
}

.product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s;
    position: relative;
    z-index: 1;
}

.product-trailer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.3s;
    z-index: 2;
    background: #000;
}

.product-card:hover .product-image {
    opacity: 0;
}

.product-card:hover .product-trailer {
    opacity: 1;
}

.youtube-trailer {
    width: 100%;
    height: 100%;
    border: none;
}

.local-trailer {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-info {
    padding: 20px;
    min-height: 180px;
    display: flex;
    flex-direction: column;
}

.product-card h3 {
    font-size: 1.3rem;
    margin-bottom: 10px;
    min-height: 60px;
    flex-grow: 1;
}

.price {
    font-size: 1.5rem;
    color: #ff4b2b;
    font-weight: bold;
    margin: 15px 0;
    display: block;
}

.btn-primary {
    background-color: #0d6efd;
    border: none;
    padding: 10px 20px;
    font-weight: bold;
    transition: all 0.3s;
    width: 100%;
    margin-top: auto;
}

.platform-filter {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin: 40px 0;
    flex-wrap: wrap;
}

.platform-btn {
    background-color: #2d2d2d;
    color: white;
    border: 1px solid #0d6efd;
    padding: 10px 25px;
    border-radius: 30px;
    transition: all 0.3s;
    font-weight: bold;
}

.platform-btn:hover, .platform-btn.active {
    background-color: #0d6efd;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
}

.newsletter {
    background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
    padding: 50px;
    border-radius: 15px;
    margin: 60px 0;
    text-align: center;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
}

.newsletter h3 {
    font-size: 1.8rem;
    margin-bottom: 20px;
    font-family: 'Orbitron', sans-serif;
}

.newsletter p {
    font-size: 1.1rem;
    margin-bottom: 30px;
    opacity: 0.9;
}

.newsletter .form-control {
    height: 50px;
    border-radius: 30px;
    border: none;
    padding: 0 20px;
}

.newsletter .btn {
    border-radius: 30px;
    height: 50px;
    padding: 0 30px;
    font-weight: bold;
}

.testimonials {
    margin: 60px 0;
}

.testimonial-card {
    background: #2d2d2d;
    padding: 30px;
    border-radius: 15px;
    height: 100%;
    transition: transform 0.3s;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.testimonial-card:hover {
    transform: translateY(-10px);
}

.testimonial-img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 20px;
    display: block;
    border: 3px solid #0d6efd;
}

.testimonial-name {
    color: #ff4b2b;
    font-weight: bold;
    margin-top: 15px;
    display: block;
}

.rating {
    color: #ffc107;
    margin-bottom: 15px;
    font-size: 1.2rem;
}

.view-all {
    margin: 50px 0;
    text-align: center;
}

.btn-outline-secondary {
    border: 2px solid #0d6efd;
    color: #0d6efd;
    padding: 12px 30px;
    font-weight: bold;
    transition: all 0.3s;
}

.btn-outline-secondary:hover {
    background-color: #0d6efd;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
}

.footer {
    background-color: #0d6efd;
    color: #fff;
    padding: 40px 0;
    margin-top: 80px;
}

.footer a {
    color: #fff;
    text-decoration: none;
    transition: opacity 0.3s;
}

.footer a:hover {
    opacity: 0.8;
}

.footer-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
}

.social-icons {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 20px;
}

.social-icons a {
    font-size: 1.5rem;
}

.copyright {
    text-align: center;
    opacity: 0.8;
}

@@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@@keyframes slideIn {
    from { transform: translateY(50px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

.fade-in {
    animation: fadeIn 1s ease-in-out;
}

.slide-in {
    animation: slideIn 1s ease-out;
}

.product-image-container::before {
    content: "Immagine non disponibile";
    position: absolute;
    color: #666;
    font-size: 0.9rem;
    z-index: 0;
    text-align: center;
    width: 100%;
    padding: 0 20px;
    display: none;
}

.product-image-container:has(img[src=""])::before,
.product-image-container:not(:has(img))::before {
    display: block;
}

@@media (max-width: 992px) {
    :root {
        --product-image-height: 160px;
        --product-card-width: 240px;
    }
}

@@media (max-width: 768px) {
    :root {
        --product-image-height: 140px;
        --product-card-width: 220px;
    }
    
    .hero h1 {
        font-size: 2.2rem;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .platform-filter {
        gap: 10px;
    }
    
    .platform-btn {
        padding: 8px 15px;
        font-size: 0.9rem;
    }

    /* Navbar mobile */
    .navbar-collapse {
        background: linear-gradient(145deg, #0a0a1a 0%, #1a1a2e 100%);
        border: 1px solid #0d6efd;
        border-radius: 0 0 10px 10px;
        padding: 1rem;
        margin-top: 0.5rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }

    .nav-link {
        margin: 0.3rem 0;
        padding: 0.8rem 1rem !important;
    }

    .nav-link::before {
        display: none;
    }
}

@@media (max-width: 576px) {
    :root {
        --product-image-height: 120px;
        --product-card-width: 100%;
    }
    
    .product-grid {
        grid-template-columns: 1fr;
    }
    
    .product-card {
        max-width: 300px;
        margin: 0 auto;
    }
    
    .hero h1 {
        font-size: 1.8rem;
    }
    
    .newsletter {
        padding: 30px 20px;
    }
}
