@functions {
    public string GetEmbedYoutubeUrl(string youtubeUrl)
    {
        string videoId;
        
        // Se l'URL è già in formato embed
        if (youtubeUrl.Contains("embed/"))
        {
            videoId = youtubeUrl.Split(new[] { "embed/" }, StringSplitOptions.None).Last().Split('?')[0];
            return $"https://www.youtube.com/embed/{videoId}?autoplay=1&mute=1&controls=0&loop=1&playlist={videoId}&rel=0&enablejsapi=1";
        }
        // Se l'URL è in formato standard
        else if (youtubeUrl.Contains("v="))
        {
            videoId = youtubeUrl.Split(new[] { "v=" }, StringSplitOptions.None).Last().Split('&')[0];
            return $"https://www.youtube.com/embed/{videoId}?autoplay=1&mute=1&controls=0&loop=1&playlist={videoId}&rel=0&enablejsapi=1";
        }
        // Se l'URL è già completo (già con parametri)
        else
        {
            return youtubeUrl.Contains('?') 
                ? $"{youtubeUrl}&autoplay=1&mute=1" 
                : $"{youtubeUrl}?autoplay=1&mute=1";
        }
    }
}

