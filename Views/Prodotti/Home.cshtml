            <p class="slide-in">Trova le console e gli accessori più richiesti sul mercato.</p>
            <a href="/Prodotti" class="btn btn-primary btn-lg slide-in">Esplora ora</a>
        </div>
    </section>

    <div class="container">
    <!-- Featured Products -->
    <section class="featured-products">
        <h2 class="section-title fade-in">🔥 I più venduti</h2>
        <div class="product-grid">
            @foreach (var prodotto in Model.ProdottiPiuVenduti.Take(4))
            {
                <div class="product-card fade-in">
                    <div class="product-image-container">
                        @if (!string.IsNullOrEmpty(prodotto.ImmagineUrl))
                        {
                            <img src="@prodotto.ImmagineUrl" alt="@prodotto.NomeProdotto" class="product-image standard-image" onerror="this.style.display='none'">
                        }
                        
                        @if (!string.IsNullOrEmpty(prodotto.TrailerUrl))
                        {
                            <div class="product-trailer">
                                @if (prodotto.TrailerUrl.Contains("youtube.com") || prodotto.TrailerUrl.Contains("youtu.be"))
                                {
                                    <!-- Modificato: URL YouTube ottimizzato per embed -->
                                    <iframe class="youtube-trailer" 
                                            src="@GetEmbedYoutubeUrl(prodotto.TrailerUrl)" 
                                            frameborder="0" 
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                            allowfullscreen
                                            loading="lazy">
                                    </iframe>
                                }
                                else if (prodotto.TrailerUrl.EndsWith(".mp4") || prodotto.TrailerUrl.EndsWith(".webm"))
                                {
                                    <video class="local-trailer" autoplay loop muted playsinline>
                                        <source src="@prodotto.TrailerUrl" type="video/mp4">
                                        Il tuo browser non supporta il video.
                                    </video>
                                }
                            </div>
                        }
                    </div>
                    <div class="product-info">
                        <h3>@prodotto.NomeProdotto</h3>
                        <span class="price">€@prodotto.Prezzo</span>
                        <a href="/Prodotti/Dettagli/@prodotto.IdProdotto" class="btn btn-primary">Scopri di più</a>
                    </div>
                </div>
            }
        </div>
