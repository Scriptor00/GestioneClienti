   <script>
    // Questo codice viene eseguito quando la pagina ha finito di caricare
    document.addEventListener('DOMContentLoaded', function() {
        // 1. Ottieni gli elementi dalla pagina
        const profileImageInput = document.getElementById('profileImageInput');
        const profileImage = document.getElementById('profileImage');
        
        // 2. Controlla se c'è un'immagine salvata precedentemente
        const savedImage = localStorage.getItem('profileImage');
        if (savedImage) {
            // Se esiste un'immagine salvata, la carica
            profileImage.src = savedImage;
        }
        
        // 3. Aggiungi un listener per quando l'utente seleziona un file
        profileImageInput.addEventListener('change', function(e) {
            // Verifica che sia stato selezionato un file
            if (e.target.files && e.target.files[0]) {
                // Crea un oggetto FileReader per leggere il file
                const reader = new FileReader();
                
                // Definisci cosa fare quando la lettura è completata
                reader.onload = function(event) {
                    // 4. Aggiorna l'immagine del profilo con quella nuova
                    profileImage.src = event.target.result;
                    
                    // 5. Salva l'immagine nel localStorage del browser
                    localStorage.setItem('profileImage', event.target.result);
                }
                
                // 6. Leggi il file come URL dati (data URL)
                reader.readAsDataURL(e.target.files[0]);
            }
        });
    });
